//System/Computer にディレクトリ移動
	chdir "System/Computer/C@Drive/walls/img/"
	
//読み込み開始
	notesel buffer_things
	repeat total_buffer_things + 1
		notesel buffer_things
		noteget buffer_thing, cnt
	
		if cnt != 0 and buffer_thing != "none" {
			celload buffer_thing, cnt
		}
	
		gsel 0
	
		gmode 2
		pos (scx/2)-100, (scy/2)+50 : gcopy 10002, 0, 0, double(cnt)/(total_buffer_things-1)*200, 5
		
		wait 1
	loop
	
//ディレクトリを戻す
	chdir default_dir